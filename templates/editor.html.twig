{% extends 'base.html.twig' %}

{% block title %}Graphic Editor{% endblock %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
        {% endblock %}
 {% block javascripts %}
     {{ encore_entry_script_tags('app') }}
     {{ encore_entry_script_tags('editor') }}
 {% endblock %}

{% block body %}

    <div class="col-12 col-md-12">
        <div class="col-12 col-md-12 list">
            <div class="row">
                <div class="col-12 col-md-12 list-title">Graphic Editor</div>
            </div>
            <div class="row">
                <div class="col-6 col-md-6">
                    <i class="far fa-circle" data-toggle="modal" data-target="#circleModal" title="Add circle">Add circle</i>
                    <i class="far fa-square" data-toggle="modal" data-target="#squareModal" title="Add square">Add square</i>
                </div>
                <div class="col-6 col-md-6">
                    <i class="far fa-plus-square cursor-style" id="addShapesBtn" title="Add to editor cache">Add to editor cache</i>
                    <i class="fas fa-palette cursor-style" id="drawBtn" title="Draw">Draw</i>
                </div>
            </div>
            <div class="row list-header">

                <th></th>
                <th></th>
            </div>
            <div class="list-body" id="drawPanel">
            </div>
        </div>
    </div>
    {% include "circle.html.twig" with {'foo': 'bar'}%}
    {% include "square.html.twig" %}
{% endblock %}