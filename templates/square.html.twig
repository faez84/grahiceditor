<div class="modal fade" id="squareModal" tabindex="-1" role="dialog" aria-labelledby="squareModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="squareModalLabel">New square</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label class="col-form-label">* Position x:</label>
                        <input type="integer" class="form-control" id="xPosition" min="1" value="1" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">* Position y:</label>
                        <input type="integer" class="form-control" id="yPosition" min="1" value="1" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">* length:</label>
                        <input type="number" class="form-control" id="length" min="1" value="1" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">color:</label>
                        <input type="text" class="form-control"  id="color">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">border:</label>
                        <input type="number" class="form-control" min="0" value="1" id="border">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">size:</label>
                        <input type="number" class="form-control" min="1" value="1"  id="size">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="addSquareBtn">Add</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
